<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/srl_container"
        tools:context=".ui.activity.MainActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Start 현재 날씨/위치/온도 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:paddingVertical="20dp">

                    <LinearLayout
                        android:id="@+id/ll_top_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/iv_top_main"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_top_temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            tools:text="16"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_top_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="서울특별시"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_baseline_location_on_24"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_top_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="흐림"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="최고온도"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="최저온도"/>

                        </LinearLayout>

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/iv_top_main"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ll_top_info"
                        app:layout_constraintHorizontal_chainStyle="spread"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- End 현재 날씨/위치/온도 -->

                <!-- Start 시간별 날씨 예보 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_time_line"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:paddingVertical="15dp"/>
                <!-- End 시간별 날씨 예보 -->

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>